.modal-header(type="text/ng-template")
	h3.modal-title {{modal.editObject._id}}
.modal-body
		timepicker(ng-model='modal.mytime', ng-change='modal.changed()', hour-step='modal.hstep', minute-step='modal.mstep', show-meridian='modal.ismeridian')
.modal-footer
	button.btn.btn-primary(type='button', ng-click='ok()') OK
	button.btn.btn-warning(type='button', ng-click='cancel()') Cancel