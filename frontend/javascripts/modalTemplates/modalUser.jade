.modal-header(type="text/ng-template")
	h3.modal-title Edit 
		strong {{new.user.fName}} {{new.user.lName}}
.modal-body
	form(role='form')
		.form-group
			label(for='firstName') First Name
			input#firstName.form-control(type='text', ng-model ="new.user.fName")
			label(for='firstName') Last Name
			input#firstName.form-control(type='text', ng-model ="new.user.lName")
			label(for='firstName') Phone Number
			input#firstName.form-control.bfh-phone(type='text', ng-model ="new.user.tel" data-format="+38 (ddd) ddd-dddd")
			label(for='sex') Sex
			br
			.btn-group#sex(role='group')
				button.btn.btn-default(type='button' ng-model = 'new.user.sex' name = 'sex' btn-radio="'male'") male
				button.btn.btn-default(type='button' ng-model = 'new.user.sex' name = 'sex' btn-radio="'female'") female
			{{new.user.sex}}
			br
			label date Added
			p.input-group
				input.form-control(type='date', datepicker-popup='', ng-model='new.user.date', is-open='status.opened', min-date='minDate', max-date='maxDate', datepicker-options='dateOptions', date-disabled='disabled(date, mode)', ng-required='true', close-text='Close')
.modal-footer
	button.btn.btn-primary(type='button', ng-click='new.saveUser()') OK
	button.btn.btn-warning(type='button', ng-click='new.cancel()') Cancel

	